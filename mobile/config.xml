<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ankur.tarana" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Tarana</name>
    <description>
        An online radio app
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Ankur's creation
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="mdpi" src="res/drawable-mdpi/tarana_logo.png" />
        <icon density="hdpi" src="res/drawable-hdpi/tarana_logo.png" />
        <icon density="xhdpi" src="res/drawable-xhdpi/tarana_logo.png" />
        <icon density="xxhdpi" src="res/drawable-xxhdpi/tarana_logo.png" />
        <icon density="xxxhdpi" src="res/drawable-xxxhdpi/tarana_logo.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^7.1.4" />
    <engine name="browser" spec="^5.0.4" />
</widget>
